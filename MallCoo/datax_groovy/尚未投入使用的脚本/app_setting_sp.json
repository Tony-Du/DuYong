{
    "job": {
        "content": [{
            "reader": {
                "name": "mallcoo_mongodbreader",
                "parameter": {
                    "collectionName": "ProjectConfig",
                    "column": [
                        { "name": "Category" },
                        { "name": "ID" },
						{ "name": "IDList", "type": "Array", "splitter": "_" }
                    ],
                    "dbName": "SP_Mall",
                    "url":"$url/SP_Mall.ProjectConfig$qs",
					"query":"{'ID':{ $gt: $start,$lte: $end }}"
                }
            },
            "writer": {
                "name": "hdfswriter",
                "parameter": {
                    "column": [
                        { "name": "Category", "type":"int" },
						{ "name": "ID", "type":"bigint" },
                        { "name": "IDList", "type":"string" }             
                    ],
                    "defaultFS": "hdfs://hadoop000:9000",
                    "fieldDelimiter": "\1",
                    "fileName": "$filename",
                    "fileType": "orc",
                    "path": "/user/root/hive/mongo.db/appsetting0",
                    "writeMode": "append"
                }
            },
			"transformer": [{
                "name": "dx_groovy",
                "parameter": {
                    "code": "
                        record.setColumn(0, new LongColumn(1));
                        return record;",
                    "extraPackage":[]
                }
            }]
        }],
        "setting": { "speed": { "channel": $channel } }
    }
}